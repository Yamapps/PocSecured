<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!---->
    <!--TEXT APPEARANCES-->
    <!---->

    <style name="DefaultTextAppearance">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="DefaultTextAppearance.Small" parent="DefaultTextAppearance">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>

    <style name="DefaultTextAppearance.Medium" parent="DefaultTextAppearance">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <style name="DefaultTextAppearance.Large" parent="DefaultTextAppearance">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>
</resources>